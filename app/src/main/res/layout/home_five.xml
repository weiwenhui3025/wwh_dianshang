<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="330dp">
    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:text="专题精选"
        android:textSize="20sp"
        android:id="@+id/dddd"
        android:layout_height="50dp"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/dddd"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="300dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/home_five_iv1"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/home_five_tvtitle1"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/home_five_tv_pric1"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/home_five_tv_body"
                    android:textSize="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/home_five_iv2"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/home_five_tvtitle2"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/home_five_tv_pric2"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/home_five_tv_body2"
                    android:textSize="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/home_five_iv3"
                    android:scaleType="fitXY"
                    android:layout_width="300dp"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/home_five_tvtitle3"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/home_five_tv_pric3"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/home_five_tv_body3"
                    android:textSize="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="8dp"
        android:background="#efefef"/>
</RelativeLayout>